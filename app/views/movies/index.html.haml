-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => ("hilite" if params[:inorder] == "title")} 
        %a#title_header{:href => movies_path({:inorder => 'title'})} Movie Title
      %th Rating
      %th{:class => ("hilite" if params[:inorder] == "release_date")} 
        %a#release_date_header{:href => movies_path({:inorder => 'release_date'})} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
